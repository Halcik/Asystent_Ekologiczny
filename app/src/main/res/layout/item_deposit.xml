<?xml version="1.0" encoding="utf-8"?>
<!-- Element listy opakowania: ukÅ‚ad kompaktowy z dwiema kolumnami (info + akcje) -->
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_deposit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="true"
    android:padding="6dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/card_border_success">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="52dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="6dp">

        <!-- LEWA KOLUMNA (informacje) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_deposit_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:maxLines="2"
                android:ellipsize="end" />
            <TextView
                android:id="@+id/tv_deposit_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="11sp"
                android:textColor="@color/text_secondary"
                android:maxLines="2"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- PRAWA KOLUMNA (akcje) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical|end"
            android:layout_marginStart="6dp">
            <ImageButton
                android:id="@+id/btn_deposit_delete"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/action_delete"
                android:src="@drawable/ic_delete"
                app:tint="@color/text_primary" />
            <CheckBox
                android:id="@+id/cb_returned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_returned"
                android:textSize="10sp"
                android:layout_marginTop="2dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:contentDescription="@string/returned_desc" />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
