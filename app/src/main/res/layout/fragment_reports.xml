<?xml version="1.0" encoding="utf-8"?>
<!-- Ekran raportów: nagłówek i placeholder pod przyszłe statystyki / wykresy -->
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:overScrollMode="never"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Nagłówek -->
        <TextView
            android:id="@+id/reports_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reports_header"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />

        <!-- Opis ekranu -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/reports_subtitle" />

        <!-- Ramka: Okres raportu -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_report_period"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="@color/card_background_ok"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="true"
            app:contentPadding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/reports_period_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reports_period_title"
                    android:textStyle="bold"
                    android:paddingBottom="6dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <Spinner
                        android:id="@+id/spinner_year"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:spinnerMode="dropdown"
                        android:prompt="@string/reports_hint_year" />

                    <Spinner
                        android:id="@+id/spinner_month"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.1"
                        android:spinnerMode="dropdown"
                        android:prompt="@string/reports_hint_month"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btn_calculate_monthly_sum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/reports_calculate" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Sekcja: Miesięczna suma wydatków w ramce -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_report_monthly_sum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="true"
            app:contentPadding="20dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/card_border_success">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/monthly_sum_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reports_monthly_sum_title"
                    android:textStyle="bold"
                    android:paddingBottom="8dp" />

                <!-- Wynik -->
                <TextView
                    android:id="@+id/tv_monthly_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/reports_monthly_sum_placeholder"
                    android:textStyle="bold" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Ramka: Suma odzyskanej kaucji -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_report_deposit_sum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="true"
            app:contentPadding="20dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/card_border_success">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/deposit_sum_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reports_deposit_sum_title"
                    android:textStyle="bold"
                    android:paddingBottom="8dp" />

                <!-- Wspólne pola wyboru roku i miesiąca wykorzystujemy te same nad ramką wydatków -->
                <TextView
                    android:id="@+id/tv_deposit_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/reports_deposit_sum_placeholder"
                    android:textStyle="bold" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Sekcja: Wykres słupkowy wydatków vs odzyskane kaucje -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_report_bar_chart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="64dp"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="true"
            app:contentPadding="20dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/card_border_success">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/bar_chart_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reports_bar_chart_title"
                    android:textStyle="bold"
                    android:paddingBottom="8dp" />

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/bar_chart_expenses_vs_deposits"
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:contentDescription="@string/reports_bar_chart_content_description" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
