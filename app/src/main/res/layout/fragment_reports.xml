<?xml version="1.0" encoding="utf-8"?>
<!-- Ekran raportów: nagłówek i placeholder pod przyszłe statystyki / wykresy -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Nagłówek -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Raporty Ekologiczne"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />

        <!-- Opis ekranu -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Monitoruj swoje oszczędności i wpływ na środowisko" />

        <!-- Placeholder sekcji danych (do rozbudowy) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Tutaj można dodać statystyki, wykresy itd.)" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
