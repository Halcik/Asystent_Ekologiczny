<?xml version="1.0" encoding="utf-8"?>
<!-- Layout ekranu Ustawienia: nagłówek informacyjny + sekcja wyboru motywu aplikacji -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Nagłówek sekcji ustawień / edukacji -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ustawienia / Edukacja"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />

        <!-- Krótki opis ekranu -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Sekcja konfiguracji aplikacji oraz materiały edukacyjne." />

        <!-- Kontener na elementy ustawień (łatwo rozszerzyć o kolejne pozycje) -->
        <LinearLayout
            android:id="@+id/settings_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp" >

            <!-- Tytuł grupy: wybór motywu -->
            <TextView
                android:id="@+id/theme_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_theme_title"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <!-- Opis działania przełącznika motywu -->
            <TextView
                android:id="@+id/theme_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_theme_desc"
                android:layout_marginTop="4dp" />

            <!-- Lista opcji wyboru motywu (radio = tylko jedna opcja aktywna) -->
            <RadioGroup
                android:id="@+id/radio_theme_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp">

                <!-- Motyw podąża za systemem -->
                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/radio_theme_system"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/theme_system" />

                <!-- Wymuszenie jasnego motywu -->
                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/radio_theme_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/theme_light" />

                <!-- Wymuszenie ciemnego motywu -->
                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/radio_theme_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/theme_dark" />
            </RadioGroup>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
