<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Zaokrąglone czarne pola z białą ramką -->
    <style name="AppTextInputBase" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@android:color/white</item>
        <item name="boxStrokeColor">@android:color/black</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="hintTextColor">#99000000</item>
        <item name="android:textColorHint">#99353434</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="shapeAppearance">@style/AppTextInputShape</item>
        <item name="shapeAppearanceOverlay">@style/AppTextInputShape</item>
    </style>

    <style name="AppTextInputDropdown" parent="Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@android:color/white</item>
        <item name="boxStrokeColor">@android:color/black</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="hintTextColor">#99000000</item>
        <item name="android:textColorHint">#99353434</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="shapeAppearance">@style/AppTextInputShape</item>
        <item name="shapeAppearanceOverlay">@style/AppTextInputShape</item>
    </style>

    <style name="AppTextInputShape" parent="ShapeAppearance.Material3.Corner.Medium">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <!-- Styl tekstu wewnątrz pól (opcjonalny) -->
    <style name="AppTextInputEditText" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">#99353434</item>
    </style>
</resources>
